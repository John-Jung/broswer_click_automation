{
  "manifest_version": 3,
  "name": "Auto Clicker",
  "version": "1.0",
  "description": "자동 클릭 도구",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Clicker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
